@page
@model WebApp_Pokemon.Pages.MenuPages.Add

<h2 class="text-center my-4">Add New Pokemon</h2>

<form method="post" class="container mt-4">
    <div class="card shadow-sm p-4">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Pokemon name" required />
        </div>
        <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <input type="text" id="type" name="type" class="form-control" placeholder="Enter Pokemon type" required />
        </div>
        <div class="mb-3">
            <label for="level" class="form-label">Level</label>
            <input type="number" id="level" name="level" class="form-control" placeholder="Enter Pokemon level" min="0" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary px-4">Add Pokemon</button>
        </div>
    </div>
</form>
